package com.itextdemo.basic;

import java.io.IOException;

import com.itextpdf.kernel.pdf.PdfDocument;
import com.itextpdf.kernel.pdf.PdfWriter;
import com.itextpdf.layout.Document;
import com.itextpdf.layout.element.Cell;
import com.itextpdf.layout.element.Paragraph;
import com.itextpdf.layout.element.Table;


public class TablePro {
	public static void main(String[] args) throws IOException{
		Table table=new Table(new float[]{200f,50f,100f});
		
		//Heading
		table.addCell(new Cell().add(new Paragraph("Item")).setBold());
		table.addCell(new Cell().add(new Paragraph("QTY")).setBold());
		table.addCell(new Cell().add(new Paragraph("Price")).setBold());
		
		//Entry 1
		table.addCell(new Cell().add(new Paragraph("Laptop")).setBold());
		table.addCell(new Cell().add(new Paragraph("13")).setBold());
		table.addCell(new Cell().add(new Paragraph("34000")).setBold());
		
		//Entry 2
		table.addCell(new Cell().add(new Paragraph("Mobile")).setBold());
		table.addCell(new Cell().add(new Paragraph("15")).setBold());
		table.addCell(new Cell().add(new Paragraph("15000")).setBold());
		
		//Entry 3
		table.addCell(new Cell().add(new Paragraph("Tablet")).setBold());
		table.addCell(new Cell().add(new Paragraph("34")).setBold());
		table.addCell(new Cell().add(new Paragraph("60000")).setBold());
		
		Document doc=new Document(new PdfDocument(new PdfWriter("sample.pdf")));
		doc.add(table);
		doc.close();
	}
}
