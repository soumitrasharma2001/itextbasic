package com.itextdemo.basic;

import java.io.IOException;

import com.itextpdf.kernel.pdf.PdfDocument;
import com.itextpdf.kernel.pdf.PdfWriter;
import com.itextpdf.layout.Document;
import com.itextpdf.layout.element.Cell;
import com.itextpdf.layout.element.Paragraph;
import com.itextpdf.layout.element.Table;


public class ColSpanAndRowSpanPro {

	public static void main(String[] args) throws IOException{
		Table table=new Table(new float[] {100f,100f,100f});
		table.addCell(new Cell().add(new Paragraph("One")));
		table.addCell(new Cell().add(new Paragraph("Two")));
		table.addCell(new Cell().add(new Paragraph("Three")));
		Document doc=new Document(new PdfDocument(new PdfWriter("sample.pdf")));
		doc.close();
		System.out.println("Done");

	}

}
